<div class="jumbotron">
  <div class="btn-toolbar justify-content-between">
    <h1>Vacation</h1>
    <div class="btn-group">
      <%= link_to 'Home', dashboard_index_url, class: "btn btn-secondary my-auto", style: "color:white" %>
      <%= link_to 'Use', new_vacation_hours_event_path, class: "btn btn-primary my-auto", style: "color:white" %>
      <%= link_to 'Gain', vacation_hours_events_gain_path, class: "btn btn-warning my-auto", style: "color:gray" %>
    </div>
  </div>
</div>
  
<div class="container-fluid">
  <table class="table table-striped">
    <thead>
      <tr class="h5">
        <th>Date</th>
        <th>Used</th>
        <th>Gained</th>
        <th colspan="2"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @vacation_hours_events.order(vacation_hours_adj_date: :desc).each do |vacation_hours_event| %>
        <tr>
          <td><%= vacation_hours_event.vacation_hours_adj_date.strftime("%m/%d/%Y") %></td>
          <td><%= vacation_hours_event.vacation_hours_used %></td>
          <td><%= vacation_hours_event.vacation_hours_gained %></td>
          <td>
            <%= link_to 'Delete', vacation_hours_event,
                method: :delete, data: { confirm: 'Are you sure?' },
                class: "btn btn-danger btn-sm float-right" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
  