<div class="jumbotron">
  <%= link_to 'New Hours Event', new_hours_event_path, class: "btn btn-primary btn-lg float-right" %>
  <h1>Hours Worked</h1>
</div>

<div class="container-fluid">
  <table class="table table-striped">
    <thead>
      <tr class="h2">
        <th>Date</th>
        <th>Hours</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @hours_events.order(hours_worked_date: :desc).each do |hours_event| %>
        <tr>
          <td class="h4"><%= hours_event.hours_worked_date.strftime("%m/%d/%Y") %></td>
          <td class="h4"><%= hours_event.hours_worked %></td>
          <td>
            <%= link_to 'Edit', edit_hours_event_path(hours_event), class: "btn btn-success btn-lg" %>
            <%= link_to 'Delete', hours_event,
            method: :delete, data: { confirm: 'Are you sure?' },
            class: "btn btn-danger btn-lg" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


