<div class="jumbotron">
  <h1>Sick Hours Usage</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Hours Used</th>
      <th>Hours Gained</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @sick_hours_events.order(sick_hours_adj_date: :desc).each do |sick_hours_event| %>
      <tr>
        <td><%= sick_hours_event.sick_hours_adj_date.strftime("%m/%d/%Y") %></td>
        <td><%= sick_hours_event.sick_hours_used %></td>
        <td><%= sick_hours_event.sick_hours_gained %></td>
        <td>
          <%= link_to 'Edit', edit_sick_hours_event_path(sick_hours_event), class: "btn btn-success btn-sm" %>
        </td>
        <td>
          <%= link_to 'Delete', sick_hours_event,
              method: :delete, data: { confirm: 'Are you sure?' },
              class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="btn-group">
  <%= link_to 'New Hours Event', new_sick_hours_event_path, class: "btn btn-primary" %>
  <%= link_to 'Manually Add Hours', sick_hours_events_gain_path, class: "btn btn-warning" %>
</div>